<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Remix Icon CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    />

    <link rel="stylesheet" href="/public/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  </head>
  <body>
    <div class="bg-gradient"></div>

    <div class="app-shell">
      <!-- TOP BAR -->
      <header class="top-bar">
        <div class="logo">
          Dramabox<span>Reels</span>
        </div>
      </header>

      <!-- Adsterra Top Banner (optional) -->
      <div class="ad-slot ad-top">
        <!-- script banner kalau ada -->
      </div>

      <!-- FEED -->
      <main id="reelContainer" class="feed">
        <!-- cards akan di-inject via JS -->

        <div class="ad-slot ad-feed-bottom">
          <!-- script native ad kalau ada -->
        </div>
      </main>
    </div>

    <!-- BOTTOM NAV -->
    <nav class="bottom-nav">
      <button class="tab-btn active" data-tab="foryou">
        <i class="ri-home-4-fill"></i>
        <span>For You</span>
      </button>
      <button class="tab-btn" data-tab="new">
        <i class="ri-flashlight-fill"></i>
        <span>Terbaru</span>
      </button>
      <button class="tab-btn" data-tab="rank">
        <i class="ri-bar-chart-fill"></i>
        <span>Top Rank</span>
      </button>
      <button class="tab-btn" data-tab="search">
        <i class="ri-search-line"></i>
        <span>Cari</span>
      </button>
    </nav>

    <!-- LOADING FULL PAGE -->
    <div id="loadingOverlay" class="loading-overlay">
      <div class="loader"></div>
      <div class="loading-text">Mengambil data...</div>
    </div>

    <!-- MODAL DETAIL: judul + badge episode (klik) + player -->
    <div id="detailModal" class="modal-backdrop">
      <div class="modal">
        <button class="modal-close">&times;</button>

        <div class="modal-header">
          <div class="modal-meta">
            <h2 id="modalTitle"></h2>

            <button id="openEpisodeListBtn" class="episode-pill-btn">
              <span id="modalCurrentEpisode"></span>
              <i class="ri-arrow-down-s-line"></i>
            </button>
          </div>
        </div>

        <div class="modal-body">
          <div class="modal-player">
            <div class="video-shell">
              <video id="playerVideo" playsinline preload="metadata"></video>

              <div class="video-overlay-top"></div>
              <div class="video-overlay-bottom"></div>

              <!-- Custom controls -->
              <div class="video-controls">
                <button id="playPauseBtn" class="vc-btn">
                  <i class="ri-play-fill"></i>
                </button>

                <div class="vc-time">
                  <span id="currentTimeLabel">00:00</span>
                  <input
                    id="seekBar"
                    type="range"
                    min="0"
                    max="100"
                    step="0.1"
                    value="0"
                  />
                  <span id="durationLabel">00:00</span>
                </div>

                <div class="vc-right">
                  <button id="muteBtn" class="vc-btn">
                    <i class="ri-volume-up-fill"></i>
                  </button>
                  <button id="fullscreenBtn" class="vc-btn">
                    <i class="ri-fullscreen-fill"></i>
                  </button>
                </div>
              </div>

              <!-- Loading di atas video -->
              <div id="playerLoading" class="player-loading hidden">
                <div class="loader small"></div>
                <span>Memuat episode...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- MODAL LIST EPISODE (BOTTOM SHEET) -->
    <div id="episodeListModal" class="episode-modal-backdrop">
      <div class="episode-modal">
        <div class="episode-modal-header">
          <span id="episodeModalTitle">Daftar Episode</span>
          <button class="episode-modal-close" type="button">&times;</button>
        </div>
        <div id="episodeGrid" class="episode-grid">
          <!-- episode cards via JS -->
        </div>
      </div>
    </div>

    <!-- FLOATING AD (opsional) -->
    <div class="ad-slot ad-floating">
      <!-- tombol/directlink atau script social bar -->
    </div>

    <!-- SEARCH MODAL -->
    <div id="searchModal" class="search-modal">
      <div class="search-modal-box">
        <input
          id="searchModalInput"
          type="text"
          placeholder="Cari judul atau kata kunci..."
        />
        <button id="searchModalBtn">
          <i class="ri-search-line"></i>
        </button>
      </div>
    </div>

    <script>
      window.AD_DIRECTLINK = "<%= adDirectLink ? adDirectLink.replace(/\"/g, '&quot;') : '' %>";
      window.AD_FREQUENCY = <%= typeof adFrequency !== 'undefined' ? adFrequency : 5 %>;
    </script>
    <script src="/public/js/main.js"></script>
  </body>
</html>
