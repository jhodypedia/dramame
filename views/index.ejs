<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="theme-color" content="#0b0f17" />
    <meta name="description" content="Short drama ala Netflix: grid poster, genre favorit, cari cepat, dan lanjutkan tontonan terakhir." />

    <!-- Remix Icon CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    />

    <link rel="stylesheet" href="/public/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  </head>

  <body>
    <!-- Background cinematic -->
    <div class="bg-cinema"></div>
    <div class="bg-noise"></div>

    <div class="app-shell netflix-shell">
      <!-- TOP BAR -->
      <header class="topbar">
        <div class="brand">
          <div class="brand-logo">Pansa<span>Drama</span></div>
          <div class="brand-sub">Netflix-style Short Drama</div>
        </div>

        <div class="topbar-actions">
          <button id="openSearchBtn" class="icon-btn" type="button" aria-label="Cari">
            <i class="ri-search-line"></i>
          </button>
        </div>
      </header>

      <!-- HERO (Netflix banner) -->
      <section class="hero">
        <div class="hero-bg">
          <div class="hero-glow"></div>
          <div class="hero-vignette"></div>
        </div>

        <div class="hero-content">
          <div class="hero-pill">
            <i class="ri-fire-fill"></i>
            <span>Trending Hari Ini</span>
          </div>

          <h1 class="hero-title">Short Drama yang bikin nagih</h1>
          <p class="hero-desc">
            Scroll cepat, pilih genre favorit, dan lanjutkan tontonan terakhir kamu.
          </p>

          <div class="hero-actions">
            <button id="heroPlayBtn" class="btn btn-primary" type="button">
              <i class="ri-play-fill"></i>
              <span>Putar Random</span>
            </button>

            <button id="heroRefreshBtn" class="btn btn-ghost" type="button">
              <i class="ri-refresh-line"></i>
              <span>Ganti</span>
            </button>
          </div>
        </div>
      </section>

      <!-- Adsterra Top Banner (optional) -->
      <div class="ad-slot ad-top">
        <% if (typeof adTopHtml !== 'undefined' && adTopHtml) { %>
          <%- adTopHtml %>
        <% } %>
      </div>

      <!-- FILTER / QUICK ACTIONS -->
      <section class="filters">
        <div class="filters-left">
          <button class="chip active" data-sort="1" type="button">
            <i class="ri-star-fill"></i> Populer
          </button>
          <button class="chip" data-sort="2" type="button">
            <i class="ri-time-fill"></i> Terbaru
          </button>
        </div>

        <div class="filters-right">
          <button id="openGenreBtn" class="chip chip-outline" type="button">
            <i class="ri-grid-fill"></i> Genre
          </button>
        </div>
      </section>

      <!-- GRID FEED (Netflix poster) -->
      <main id="reelContainer" class="grid-feed">
        <!-- cards injected via main.js -->

        <!-- LAZY LOAD sentinel (harus ada untuk IntersectionObserver) -->
        <div id="lazySentinel" class="lazy-sentinel">
          <div class="loader small"></div>
          <div class="lazy-text">Memuat lagi...</div>
        </div>
      </main>
    </div>

    <!-- BOTTOM NAV -->
    <nav class="bottom-nav">
      <button class="tab-btn active" data-tab="foryou" type="button">
        <i class="ri-home-4-fill"></i>
        <span>For You</span>
      </button>

      <button class="tab-btn" data-tab="new" type="button">
        <i class="ri-flashlight-fill"></i>
        <span>Terbaru</span>
      </button>

      <button class="tab-btn" data-tab="rank" type="button">
        <i class="ri-bar-chart-fill"></i>
        <span>Top Rank</span>
      </button>

      <button class="tab-btn" data-tab="history" type="button">
        <i class="ri-time-line"></i>
        <span>Riwayat</span>
      </button>

      <button class="tab-btn" data-tab="search" type="button">
        <i class="ri-search-line"></i>
        <span>Cari</span>
      </button>

      <button class="tab-btn" data-tab="genre" type="button">
        <i class="ri-apps-2-fill"></i>
        <span>Genre</span>
      </button>
    </nav>

    <!-- LOADING FULL PAGE -->
    <div id="loadingOverlay" class="loading-overlay">
      <div class="loader"></div>
      <div class="loading-text">Mengambil data...</div>
    </div>

    <!-- MODAL DETAIL -->
    <div id="detailModal" class="modal-backdrop">
      <div class="modal">
        <button class="modal-close" type="button" aria-label="Tutup">&times;</button>

        <div class="modal-header">
          <div class="modal-meta">
            <h2 id="modalTitle"></h2>

            <button id="openEpisodeListBtn" class="episode-pill-btn" type="button">
              <span id="modalCurrentEpisode"></span>
              <i class="ri-arrow-down-s-line"></i>
            </button>
          </div>
        </div>

        <div class="modal-body">
          <div class="modal-player">
            <div class="video-shell">
              <video id="playerVideo" playsinline preload="metadata"></video>

              <div class="video-overlay-top"></div>
              <div class="video-overlay-bottom"></div>

              <!-- Custom controls -->
              <div class="video-controls">
                <button id="playPauseBtn" class="vc-btn" type="button">
                  <i class="ri-play-fill"></i>
                </button>

                <div class="vc-time">
                  <span id="currentTimeLabel">00:00</span>
                  <input
                    id="seekBar"
                    type="range"
                    min="0"
                    max="100"
                    step="0.1"
                    value="0"
                  />
                  <span id="durationLabel">00:00</span>
                </div>

                <div class="vc-right">
                  <button id="muteBtn" class="vc-btn" type="button">
                    <i class="ri-volume-up-fill"></i>
                  </button>
                  <button id="fullscreenBtn" class="vc-btn" type="button">
                    <i class="ri-fullscreen-fill"></i>
                  </button>
                </div>
              </div>

              <!-- Loading overlay di atas video -->
              <div id="playerLoading" class="player-loading hidden">
                <div class="loader small"></div>
                <span>Memuat episode...</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- EPISODE LIST (BOTTOM SHEET) -->
    <div id="episodeListModal" class="episode-modal-backdrop">
      <div class="episode-modal">
        <div class="episode-modal-header">
          <span id="episodeModalTitle">Daftar Episode</span>
          <button class="episode-modal-close" type="button" aria-label="Tutup">&times;</button>
        </div>
        <div id="episodeGrid" class="episode-grid"></div>
      </div>
    </div>

    <!-- GENRE MODAL -->
    <div id="genreModal" class="genre-modal-backdrop">
      <div class="genre-modal">
        <div class="genre-modal-header">
          <span>Pilih Genre</span>
          <button id="closeGenreBtn" class="genre-modal-close" type="button" aria-label="Tutup">&times;</button>
        </div>
        <div class="genre-modal-body">
          <div id="genreGrid" class="genre-grid"></div>
        </div>
      </div>
    </div>

    <!-- FLOATING AD (opsional) -->
    <div class="ad-slot ad-floating">
      <% if (typeof adFloatingHtml !== 'undefined' && adFloatingHtml) { %>
        <%- adFloatingHtml %>
      <% } else { %>
      <% } %>
    </div>

    <!-- SEARCH MODAL -->
    <div id="searchModal" class="search-modal">
      <div class="search-modal-box">
        <input
          id="searchModalInput"
          type="text"
          placeholder="Cari judul atau kata kunci..."
          autocomplete="off"
        />
        <button id="searchModalBtn" type="button">
          <i class="ri-search-line"></i>
        </button>

        <div id="suggestList" class="suggest-list" style="display:none;"></div>
      </div>
    </div>

    <!-- Config -->
    <script>
      window.AD_DIRECTLINK = "<%= adDirectLink ? String(adDirectLink).replace(/\"/g, '&quot;') : '' %>";
      window.AD_FREQUENCY = <%= typeof adFrequency !== 'undefined' ? adFrequency : 5 %>;
      window.__GENRE_LIST__ = <%- JSON.stringify(typeof genres !== 'undefined' ? genres : []) %>;
    </script>

    <script src="/public/js/main.js"></script>
  </body>
</html>
