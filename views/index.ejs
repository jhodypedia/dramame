<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Remix Icon CDN -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    />

    <link rel="stylesheet" href="/public/css/style.css" />
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  </head>
  <body>
    <div class="bg-gradient"></div>

    <div class="app-shell">
      <!-- TOP BAR (tanpa search) -->
      <header class="top-bar">
        <div class="logo">
          Dramabox<span>Reels</span>
        </div>
      </header>

      <!-- Adsterra Top Banner (optional) -->
      <div class="ad-slot ad-top">
        <!-- PASTE SCRIPT BANNER ADSTERRA DI SINI JIKA MAU -->
      </div>

      <!-- FEED -->
      <main id="reelContainer" class="feed">
        <!-- Cards akan di-inject via jQuery -->

        <!-- Ad di bawah feed -->
        <div class="ad-slot ad-feed-bottom">
          <!-- PASTE SCRIPT NATIVE/INLINE ADSTERRA DI SINI JIKA MAU -->
        </div>
      </main>
    </div>

    <!-- Pager (di atas bottom nav) -->
    <div class="bottom-bar">
      <button id="prevPageBtn" class="pager-btn">« Sebelumnya</button>
      <div id="pageInfo" class="page-info"></div>
      <button id="nextPageBtn" class="pager-btn">Berikutnya »</button>
    </div>

    <!-- BOTTOM NAV dengan SEARCH -->
    <nav class="bottom-nav">
      <button class="tab-btn active" data-tab="foryou">
        <i class="ri-home-4-fill"></i>
        <span>For You</span>
      </button>

      <button class="tab-btn" data-tab="new">
        <i class="ri-flashlight-fill"></i>
        <span>Terbaru</span>
      </button>

      <button class="tab-btn" data-tab="rank">
        <i class="ri-bar-chart-fill"></i>
        <span>Top Rank</span>
      </button>

      <button class="tab-btn" data-tab="search">
        <i class="ri-search-line"></i>
        <span>Cari</span>
      </button>
    </nav>

    <!-- Loading overlay -->
    <div id="loadingOverlay" class="loading-overlay">
      <div class="loader"></div>
      <div class="loading-text">Mengambil data...</div>
    </div>

    <!-- Modal detail -->
    <div id="detailModal" class="modal-backdrop">
      <div class="modal">
        <button class="modal-close">&times;</button>

        <div class="modal-header">
          <div class="modal-cover-wrap">
            <img id="modalCover" src="" alt="cover" />
          </div>
          <div class="modal-meta">
            <h2 id="modalTitle"></h2>
            <p id="modalIntro"></p>
            <div class="modal-badges">
              <span id="modalEpisodeCount"></span>
            </div>

            <div id="continueBanner" class="continue-banner hidden">
              <span id="continueText"></span>
              <button id="continueBtn" type="button">Lanjut</button>
            </div>
          </div>
        </div>

        <div class="modal-body">
          <div class="modal-player">
            <video
              id="playerVideo"
              controls
              playsinline
              preload="metadata"
            ></video>
            <div id="playerLoading" class="player-loading hidden">
              <div class="loader small"></div>
              <span>Memuat episode...</span>
            </div>
          </div>

          <div class="modal-episodes">
            <h3>Daftar Episode</h3>
            <ul id="episodeList"></ul>

            <div class="ad-slot ad-modal">
              <!-- Ad di dalam modal (opsional) -->
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Floating ad -->
    <div class="ad-slot ad-floating">
      <!-- PASTE SCRIPT ADSTERRA FLOATING JIKA MAU -->
    </div>

    <!-- SEARCH MODAL (untuk tab Cari) -->
    <div id="searchModal" class="search-modal">
      <div class="search-modal-box">
        <input
          id="searchModalInput"
          type="text"
          placeholder="Cari judul atau kata kunci..."
        />
        <button id="searchModalBtn">
          <i class="ri-search-line"></i>
        </button>
      </div>
    </div>

    <script>
      window.AD_DIRECTLINK = "<%= adDirectLink ? adDirectLink.replace(/\"/g, '&quot;') : '' %>";
      window.AD_FREQUENCY = <%= typeof adFrequency !== 'undefined' ? adFrequency : 5 %>;
    </script>
    <script src="/public/js/main.js"></script>
  </body>
</html>
